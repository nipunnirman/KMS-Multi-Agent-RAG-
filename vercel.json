{
    "builds": [
        {
            "src": "src/app/api.py",
            "use": "@vercel/python"
        },
        {
            "src": "src/frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/(qa|index-pdf)",
            "dest": "src/app/api.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "src/app/api.py"
        },
        {
            "src": "/(.*)",
            "dest": "src/frontend/$1"
        }
    ]
}